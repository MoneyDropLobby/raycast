generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  USER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  role      Role   @default(USER)
  active    Boolean  @default(true)
  lastLogin DateTime @default(now())
  lastLoginIp String?
  filiales  Filiale[] @relation("UserFiliale") // Relation to Filiale
}

model Filiale {
  id        String   @id @default(uuid())
  strasse   String
  strasseNr String
  plz       Int
  ort       String
  telefon   String?
  website   String?
  logo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String   // Foreign key
  user      User     @relation("UserFiliale", fields: [userId], references: [id]) // Relation to User
}

